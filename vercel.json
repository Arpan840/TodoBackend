{
  "builds": [
    {
      "src": "./index.js", 
      "use": "@now/node-server"
    }
  ],
  "routes": [
    {
      "src": "/Routes/Todolist.js", 
      "dest": "/Routes/Todolist.js" 
    },
    {
      "src": "/(.*)",
      "dest": "/index.js" 
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "3002", 
    "HOST": "localhost", 
    "ALLOWED_ORIGIN": "http://localhost:3000" 
  }
}

  